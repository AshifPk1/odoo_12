<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="invoice_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                        <t t-call="invoice_report.external_layout_custom">
                          <div class="page" style="font-size: 14px;">
                            <strong><center><h2>Invoice</h2></center></strong>
                            <div class="row">
                                <div class="col-4">
                                    <strong>No.Transaction:  </strong><span t-esc="doc.number"/><br/>
                                    <strong>Date:  </strong><span t-esc="doc.date_invoice"/>
                                </div>
                                <div class="col-3"> </div>
                                <div class="col-5">
                                    <strong>Salesman:  </strong><span t-esc="doc.user_id.name"/>
                                </div>
                            </div>
                            <br/>
                            <table class="table-bordered" style="width: 100%; height:100%;border: 1px solid black;line-height: 1;">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="border: 1px solid black;">No</th>
                                        <th class="text-center" style="border: 1px solid black;">Internal Ref</th>
                                        <th class="text-center" style="border: 1px solid black;">Product Name</th>
                                        <th class="text-center" style="border: 1px solid black;">Qty</th>
                                        <th class="text-center" style="border: 1px solid black;">Disc. Qty</th>
                                        <th class="text-center" style="border: 1px solid black;">Unit</th>
                                        <th class="text-center" style="border: 1px solid black;">Price</th>
                                        <th class="text-center" style="border: 1px solid black;">Disc R</th>
                                        <th class="text-center" style="border: 1px solid black;">Disc C</th>
                                        <th class="text-center" style="border: 1px solid black;">Disc T</th>
                                        <th class="text-center" style="border: 1px solid black;">Disc D</th>
                                        <th class="text-center" style="border: 1px solid black;">Sub Total</th>
                                    </tr>
                                </thead>
                                        <t t-set="total_disc_quantity" t-value="0"/>
                                        <t t-set="sub_total" t-value="0"/>
                                        <tr t-foreach="doc.invoice_line_ids" t-as="op">
                                            <td style="padding: 2px;border: 1px solid black;" class="text-center"><span t-esc="op_index + 1"/></td>
                                            <td style="padding: 2px;border: 1px solid black;" class="text-center"><t t-if="op.product_id"><span t-esc="op.product_id.default_code"/></t></td>
                                            <td style="padding: 2px;border: 1px solid black;"><t t-if="op.product_id"><span t-field="op.product_id"/></t></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><t t-if="op.quantity"><span t-esc="op.quantity"/></t></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><span t-esc="op.additional_uom_qty"/></td>
                                            <td style="padding: 2px;border: 1px solid black;" class="text-center"><span t-field="op.uom_id"/></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><t t-if="op.price_unit"><span t-field="op.price_unit"/></t></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><t t-if="op.discount"><span t-field="op.discount"/></t></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><t t-if="op.discount2"><span t-field="op.discount2"/></t></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><t t-if="op.discount3"><span t-field="op.discount3"/></t></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><t t-if="op.discount4"><span t-field="op.discount4"/></t></td>
                                            <td style="text-align:right;padding: 2px;border: 1px solid black;"><t t-if="op.price_subtotal"><span t-field="op.price_subtotal"/></t></td>
                                            <t t-set="sub_total" t-value="sub_total+(op.quantity * op.price_unit)"/>
                                            <t t-set="total_disc_quantity" t-value="total_disc_quantity+op.additional_uom_qty"/>
                                        </tr>
                            </table>
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Terbilang:  </strong><span t-esc="doc.amount_to_words(doc.amount_total)"/><span>  rupiah</span>
                                </div>
                                <div class="col-2">
                                </div>
                                <div class="col-4">
                                    <t t-set="paid_amount" t-value="0"/>
                                    <tr t-foreach="doc._get_payments_vals()" t-as="paid">
                                        <t t-set="paid_amount" t-value="paid_amount + paid['amount']"/>
                                    </tr>
                                        <strong>Sub Total:</strong><span style="float:right" t-esc="round(sub_total,2)"/><br/>
                                        <strong>Disc. Qty:</strong><span style="float:right" t-esc="total_disc_quantity"/><br/>
                                        <strong>Total Disc:</strong><span style="float:right" t-esc="round((sub_total- doc.amount_untaxed),2)"/><br/>
                                        <strong>PPN:</strong><span style="float:right" t-field="doc.amount_tax"/><br/>
                                        <strong>Grand Total:</strong><span style="float:right" t-field="doc.amount_total"/><br/>
                                        <strong>Paid:</strong><span style="float:right" t-esc="round(paid_amount,2)"/><br/>
                                        <strong>Amount Due:</strong><span style="float:right" t-esc="doc.amount_total - paid_amount"/><br/>
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-3">
                                    <span t-esc="doc.partner_id.name"/>
                                </div>
                                <div class="col-3">
                                    <span>Gudang 1 </span>
                                </div>
                                <div class="col-3">
                                    <t t-if="doc.partner_id.company_id">
                                        <span t-esc="doc.partner_id.company_id.name"/>
                                    </t>
                                </div>
                                <div t-if="doc.date_due" class="col-3">
                                    <t t-if="doc.date_due">
                                        <strong>Due Date:  </strong><span t-esc="doc.date_due"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                        </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
